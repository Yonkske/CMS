<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dhbw.LoginController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" cache="true" spacing="5.0">
                    <Label fx:id="usernameLbl" alignment="BOTTOM_LEFT" prefWidth="100.0" text="Benutzername:">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <font>
                            <Font size="14.0" />
                        </font></Label>
                    <TextField fx:id="usernameTf" editable="false" prefWidth="210.0">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <font>
                            <Font size="14.0" />
                        </font></TextField>
                    <VBox.margin>
                        <Insets bottom="5.0" top="40.0" />
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label fx:id="passwordLbl" alignment="BOTTOM_LEFT" prefWidth="100.0" text="Passwort:">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <font>
                            <Font size="14.0" />
                        </font></Label>
               <PasswordField fx:id="passwordField" prefWidth="210.0" />
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="TOP_CENTER" spacing="10.0">
                    <Label fx:id="meldungLbl" alignment="BOTTOM_LEFT" prefWidth="130.0" style="-fx-border-color: red; -fx-border-radius: 3;" text="Ihr Benutzer oder Passwort ist falsch." textAlignment="CENTER" textFill="#fc0000" wrapText="true">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin></Label>
               <Button fx:id="loginBtn" mnemonicParsing="false" text="Anmelden" />
                    <VBox.margin>
                        <Insets bottom="40.0" top="5.0" />
                    </VBox.margin>
               <padding>
                  <Insets left="105.0" />
               </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
