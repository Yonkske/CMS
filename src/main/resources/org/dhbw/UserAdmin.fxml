<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minWidth="450.0" style="-fx-background-color: #f0f0f8;"
      stylesheets="@css/MainPagesStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dhbw.UserAdminController">
    <children>
        <HBox alignment="TOP_RIGHT" minHeight="37.0" style="-fx-background-color: #313c48;">
            <children>
                <MenuButton fx:id="adminUserMB" mnemonicParsing="false" style="-fx-background-color: #313c48;"
                            text="Vorname, Nachname" textFill="WHITE">
                    <items>
                        <MenuItem mnemonicParsing="false">
                            <graphic>
                                <Button fx:id="benutzerDropDownBtn" mnemonicParsing="false" onAction="#openUserInfo"
                                        text="Benutzer"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem fx:id="itemPassword" mnemonicParsing="false">
                            <graphic>
                                <Button fx:id="passwordEditBtn" mnemonicParsing="false" onAction="#openChangePassword" text="Passwort ändern" />
                            </graphic>
                        </MenuItem>
                    </items>
               <font>
                  <Font name="Hiragino Sans W1" size="15.0" />
               </font>
                </MenuButton>
                <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logOut" prefHeight="36.0" prefWidth="78.0"
                        style="-fx-background-color: #313c48;" text="Logout" textFill="WHITE">
                    <font>
                        <Font name="Hiragino Sans W1" size="15.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
        <HBox>
            <children>
                <VBox alignment="TOP_CENTER" maxWidth="170.0" minWidth="85.0" prefHeight="833.0"
                      style="-fx-background-color: #3D4956;" HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="startpagerBtn" minWidth="65.6" mnemonicParsing="false"
                                onAction="#swapToStartpage" text="Startseite" textFill="WHITE">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="Hiragino Sans W1" size="15.0"/>
                            </font>
                        </Button>
                        <Button fx:id="citBtn" minWidth="65.6" mnemonicParsing="false" onAction="#swapToCit" text="CIT"
                                textFill="WHITE">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                     <font>
                        <Font name="Hiragino Sans W1" size="15.0" />
                     </font>
                        </Button>
                        <Button fx:id="statisticBtn" minWidth="65.6" mnemonicParsing="false" onAction="#swapToStatistic" text="Statistik" textFill="WHITE">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                     <font>
                        <Font name="Hiragino Sans W1" size="15.0" />
                     </font>
                        </Button>
                        <Button fx:id="userBtn" minWidth="65.6" mnemonicParsing="false" onAction="#swapToUserAdmin" text="Benutzer" textFill="WHITE">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                     <font>
                        <Font name="Hiragino Sans W1" size="15.0" />
                     </font>
                        </Button>
                    </children>
                </VBox>
                <VBox style="-fx-background-color: #f0f0f8; -fx-border-color: #d8dce4; -fx-font-size: 15; -fx-font-family: AppleGothic;"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER" prefHeight="67.0" prefWidth="458.0"
                              style="-fx-background-color: #f0f0f8;">
                            <children>
                                <TextField fx:id="searchTextField" onAction="#setTableWithFilterAndSearch"
                                           prefWidth="150.0" style="-fx-background-color: #c4c4cc;"/>
                                <Button fx:id="searchBtn" mnemonicParsing="false"
                                        onAction="#setTableWithFilterAndSearch" text="Suche" textFill="WHITE">
                                    <font>
                                        <Font name="Hiragino Sans W2" size="15.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <TableView fx:id="userTable" minHeight="200.0" minWidth="350.0" onMouseClicked="#clickAction"
                                   prefHeight="700.0" prefWidth="700.0"
                                   style="-fx-background-color: #f0f0f8; -fx-border-color: #d8dce4; -fx-font-size: 15; -fx-font-family: Hiragino Sans W1;">
                            <columns>
                                <TableColumn fx:id="userColumn" minWidth="175.0" prefWidth="350.0"
                                             style="-fx-background-color: #c4c4cc; -fx-font-size: 15;" text="Benutzer"/>
                                <TableColumn fx:id="rightColumn" minWidth="175.0" prefWidth="350.0"
                                             style="-fx-background-color: #c4c4cc; -fx-font-size: 15;">
                                    <graphic>
                                        <ComboBox fx:id="filterUser" onAction="#setTableWithFilterAndSearch"
                                                  prefHeight="25.0" prefWidth="135.0" promptText="Rechte"
                                                  style="-fx-background-color: #c4c4cc; -fx-font-family: Hiragino Sans W1;"/>
                                    </graphic>
                                </TableColumn>
                            </columns>
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </TableView>
                        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f0f0f8;">
                            <children>
                                <Button fx:id="addBtn" mnemonicParsing="false" onAction="#addUser"
                                        style="-fx-background-color: #92979f;" text="+" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="deleteBtn" disable="true" mnemonicParsing="false" onAction="#deleteUser"
                                        style="-fx-background-color: #92979f;" text="Löschen" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="editBtn" disable="true" mnemonicParsing="false" onAction="#editUser"
                                        style="-fx-background-color: #92979f;" text="Bearbeiten" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" top="10.0"/>
                            </VBox.margin>
                        </HBox>


                    </children>
                    <padding>
                        <Insets left="40.0" right="40.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
