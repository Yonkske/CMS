<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dhbw.UserAdminController">
    <children>
        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <MenuButton fx:id="adminUserMB" mnemonicParsing="false" text="Vorname, Nachname">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Action 1">
                            <graphic>
                                <Button fx:id="benutzerDropDownBtn" mnemonicParsing="false" onAction="#openUserInfo" text="Benutzer" />
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" text="Action 2">
                            <graphic>
                                <Button fx:id="passwordEditBtn" mnemonicParsing="false" onAction="#openChangePassword" text="Passwort ändern" />
                            </graphic>
                        </MenuItem>
                    </items>
                </MenuButton>
                <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#logOut" text="Logout" />
            </children>
        </HBox>
        <HBox prefHeight="577.0" prefWidth="600.0">
            <children>
                <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Button fx:id="startpagerBtn" minWidth="65.6" mnemonicParsing="false"
                                onAction="#swapToStartpage" prefWidth="78.0" text="Startseite">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="citBtn" minWidth="65.6" mnemonicParsing="false" onAction="#swapToCIT"
                                prefWidth="78.0" text="CIT">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="statisticBtn" minWidth="65.6" mnemonicParsing="false" onAction="#swapToStatistic"
                                prefWidth="78.0" text="Statistik">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="userBtn" minWidth="65.6" mnemonicParsing="false" onAction="#swapToBenutzer"
                                prefWidth="78.0" text="Benutzer">
                            <VBox.margin>
                                <Insets top="20.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
                <VBox prefHeight="343.0" prefWidth="458.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="67.0" prefWidth="458.0">
                            <children>
                                <TextField fx:id="searchTextField" prefWidth="150.0" onAction="#setTableWithFilterAndSearch"/>
                                <Button fx:id="searchBtn" mnemonicParsing="false" text="Suche" onAction="#setTableWithFilterAndSearch"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="211.0" prefWidth="455.0">
                            <children>
                                <ScrollPane prefHeight="164.0" prefWidth="240.0">
                                    <content>
                                        <TableView fx:id="userTable" prefHeight="194.0" prefWidth="240.0"
                                                   onMouseClicked="#clickAction">
                                            <columns>
                                                <TableColumn fx:id="userColumn"  prefWidth="120.0"  text="Benutzer"/>
                                                <TableColumn fx:id="rightColumn" prefWidth="120.0">
                                                    <graphic>
                                                        <ComboBox fx:id="filterUser" prefHeight="25.0" prefWidth="135.0"
                                                                  promptText="Rechte"
                                                                  onAction="#setTableWithFilterAndSearch"/>
                                                    </graphic>
                                                </TableColumn>
                                            </columns>
                                        </TableView>
                                    </content>
                                </ScrollPane>
                            </children>
                        </HBox>
                        <HBox alignment="BOTTOM_RIGHT" prefHeight="97.0" prefWidth="458.0">
                            <children>
                                <Button fx:id="addBtn" mnemonicParsing="false" text="+" onAction="#addUser"/>
                                <Button fx:id="deleteBtn" mnemonicParsing="false" text="Löschen" onAction="#deleteUser"
                                        disable="true"/>
                                <Button fx:id="editBtn" mnemonicParsing="false" text="Bearbeiten" onAction="#editUser"
                                        disable="true"/>
                            </children>
                        </HBox>


                    </children>
                </VBox>
            </children>
        </HBox>
        <DialogPane prefHeight="17.0" prefWidth="600.0"/>
        <VBox prefHeight="200.0" prefWidth="100.0"/>
    </children>
</VBox>
