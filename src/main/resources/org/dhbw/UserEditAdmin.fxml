                            <ImageView fitHeight="15.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@icons/abbrechen.png" />
                                </image></ImageView>
                        </graphic></Button>
                    </children>
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
               <padding>
                  <Insets left="126.0" />
               </padding>
                </HBox>
            </children>
