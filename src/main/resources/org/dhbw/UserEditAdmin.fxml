                        <cursor>
                            <Cursor fx:constant="TEXT" />
                        </cursor></TextField>
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label fx:id="nameLbl" alignment="BOTTOM_LEFT" prefWidth="120.0" text="Nachname:">
