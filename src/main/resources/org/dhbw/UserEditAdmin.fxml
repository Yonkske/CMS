                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <Label fx:id="usernameLbl" alignment="BOTTOM_LEFT" prefWidth="120.0" text="Benutzername:">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <font>
                            <Font size="15.0" />
                        </font></Label>
                    <TextField fx:id="usernameTf" disable="false" editable="false" prefWidth="210.0">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <font>
                            <Font size="14.0" />
                        </font>
                  <cursor>
