                        <font>
                            <Font size="15.0" />
                        </font></Label>
                    <TextField fx:id="nameTf" prefWidth="210.0">
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                        <font>
                            <Font size="14.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="TEXT" />
                        </cursor></TextField>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
